config DWC_OTG
	depends on RALINK_RT3052 || RALINK_RT5350
        tristate "Ralink DWC_OTG support"
        ---help---
          This driver supports Ralink DWC_OTG

choice
        prompt "USB Operation Mode"
        depends on DWC_OTG
        default DWC_OTG_HOST_ONLY

config DWC_OTG_HOST_ONLY
        bool "HOST ONLY MODE"
        depends on DWC_OTG

config DWC_OTG_DEVICE_ONLY
        bool "DEVICE ONLY MODE"
        depends on DWC_OTG

endchoice

config DWC_OTG_FAST_TRANSACTION
        bool "Enable fast transaction for Ralink otg driver."
        depends on DWC_OTG

config DWC_OTG_DEBUG
        bool "Enable debug mode"
        depends on DWC_OTG
