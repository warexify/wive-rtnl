menu "Ralink Module"

###########
# Product ID
###########
config RT_FULL_DEVICE_NAME
        string "Original device name"
        default "Wive WR-NL"


###########
# Debuging
###########
source "drivers/net/rt_rdm/Kconfig"

#############
# Wire
#############
menu "Ethernet Ralink RT3xx/RT28xx wire driver."
source "drivers/net/raeth/Kconfig"
endmenu

#############
# Wireless
#############
menu "Platform config for  Ralink RT3xx/RT28xx/RT5xx."

config RALINK_RT3052_25DRIVER
	bool "Use old 2.5.0.x version AP driver for RT305x/3350"
        depends on RALINK_RT3052

choice
        prompt "RF Type"
        depends on RALINK_RT5350
        default RALINK_RT5350_1T1R
        config  RALINK_RT5350_1T1R
        bool "1T1R"
endchoice

choice
        prompt "RF Type"
        depends on RALINK_RT3052
        default RALINK_RT3052_2T2R

        config  RALINK_RT3050_1T1R
        bool "1T1R"

        config  RALINK_RT3051_1T2R
        bool "1T2R"

        config  RALINK_RT3052_2T2R
        bool "2T2R"
endchoice

choice
        prompt "RF Type"
        depends on  RALINK_RT3352

        config  RALINK_RT3352_2T2R
        bool "2T2R"
endchoice

choice
	prompt "RF Type"
	depends on RALINK_RT3883

	config  RALINK_RT3662_2T2R
	bool "2T3R (RT3662)"

	config  RALINK_RT3883_3T3R
	bool "3T3R (RT3883)"
endchoice
endmenu

menu "Nat acell mode"
choice
        prompt "Hardware nat mode"

config  RA_NAT_HW
        bool "Hardware NAT acceleration"

config RA_NAT_NONE
        bool "Disable NAT acceleration"
endchoice

#######
# PPE
#######
if RA_NAT_HW
menu "Ralink RT3xx/RT28xx NAT Acell support."
source "net/nat/hw_nat/Kconfig"
endmenu
endif
endmenu

#######
# Fastpath
#######
source "net/nat/bcm_nat/Kconfig"

#######
# WIFI
#######
menu "AP(STA) MODE Ralink RT3xxx wireless driver."
source "drivers/net/wireless/ralink/rt3xxx/rt2860v2_ap/Kconfig"
source "drivers/net/wireless/ralink/rt3xxx/rt2860v2_sta/Kconfig"
if HW_HAS_PCI
    menu "802.11 309x AP pci-e wireless driver."
    source "drivers/net/wireless/ralink/rt3090/rt3090_ap/Kconfig"
    endmenu
endif
endmenu

menu "Ralink DEVICES."
config RTDEV_USB
bool
default y if RT305x_INIC_USB || RT3572_AP

config RTDEV_MII
bool
default y if RT2880v2_INIC_MII || RT305x_INIC_MII

config RTDEV_PCI
bool
default y if RT2880v2_INIC_PCI || RT3090_AP
endmenu

#######
# USB
#######
config RT3XXX_EHCI_OHCI
	bool "Ralink USB EHCI/OHCI controller support"
        depends on (RALINK_RT3883 || RALINK_RT3352)
	select USB_ARCH_HAS_OHCI
	select USB_ARCH_HAS_EHCI

source "drivers/usb/dwc_otg/Kconfig"

endmenu
